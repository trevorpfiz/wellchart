{
  "name": "@wellchart/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "pnpm with-env drizzle-kit generate:pg --config src/config.ts",
    "migrate": "tsx src/migrate.ts",
    "push": "pnpm with-env drizzle-kit push:pg --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@vercel/postgres": "^0.8.0",
    "drizzle-orm": "^0.30.10"
  },
  "devDependencies": {
    "@wellchart/eslint-config": "workspace:*",
    "@wellchart/prettier-config": "workspace:*",
    "@wellchart/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.18",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "prettier": "@wellchart/prettier-config"
}
